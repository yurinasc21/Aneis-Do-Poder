@page
@{
    ViewData["Title"] = "Exibir Anéis";
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css" />
</head>

<div class="container mt-4">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <div id="aneisCarrossel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner" id="aneisContainer"></div>

        <button class="carousel-control-prev" type="button" data-bs-target="#aneisCarrossel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#aneisCarrossel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<div class="modal fade" id="modalAtualizar" tabindex="-1" aria-labelledby="modalAtualizarLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalAtualizarLabel">Atualizar Anel</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="formAtualizarAnel">
                    <input type="hidden" id="id" />
                    <div class="mb-3">
                        <label for="nome" class="form-label">Nome:</label>
                        <input type="text" id="nome" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="poder" class="form-label">Poder:</label>
                        <input type="text" id="poder" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label for="portador" class="form-label">Portador</label>
                        <select id="portador" class="form-control" required>
                            <option value="">Selecione o Portador</option>
                            <option value="Elfo">Elfo</option>
                            <option value="Sauron">Sauron</option>
                            <option value="Humano">Humano</option>
                            <option value="Hobbit">Hobbit</option>
                            <option value="Anão">Anão</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="forjadoPor" class="form-label">Forjado Por:</label>
                        <input type="text" id="forjadoPor" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/js/exibirAneis.js"></script>