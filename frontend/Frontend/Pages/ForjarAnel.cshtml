@page
@{
    ViewData["Title"] = "Forjar Anel";
}

<head>
    <link rel="stylesheet" href="/css/styles.css" />
</head>


<div class="container">
    <h1>@ViewData["Title"]</h1>
    <form id="formCriarAnel" method="post">
        <div class="form-group">
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" class="form-control" placeholder="Digite o nome do anel"
                required />
        </div>

        <div class="form-group">
            <label for="poder">Poder:</label>
            <input type="text" id="poder" name="poder" class="form-control" placeholder="Digite o poder do anel"
                required />
        </div>

        <div class="form-group">
            <label for="portador">Portador:</label>
            <select id="portador" class="form-control" required>
                <option value="">Selecione o Portador</option>
                <option value="Elfo">Elfo</option>
                <option value="Sauron">Sauron</option>
                <option value="Humano">Humano</option>
                <option value="Hobbit">Hobbit</option>
                <option value="Anão">Anão</option>
            </select>
        </div>

        <div class="form-group">
            <label for="forjadoPor">Forjado Por:</label>
            <input type="text" id="forjadoPor" name="forjadoPor" class="form-control"
                placeholder="Digite quem forjou anel" required />
        </div>

        <div class="form-group">
            <label for="imagem">Imagem:</label>
            <input type="text" id="imagem" name="imagem" class="form-control"
                placeholder="Digite a url da imagem (se houver)" />
        </div>

        <button type="submit" class="btn btn-primary">Forjar</button>
    </form>
</div>
<script src="/js/forjarAnel.js"></script>